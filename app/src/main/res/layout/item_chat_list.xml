<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/home_policy">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="@dimen/imgProfile"
        android:layout_height="@dimen/imgProfile"
        android:src="@color/sky_dirty"
        app:civ_border_color="@color/sky_dark"
        app:civ_border_width="@dimen/civBorderWidth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textNickName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/marginMediumView"
        android:layout_marginLeft="@dimen/marginSmallView"
        android:layout_marginTop="@dimen/marginSmallView"
        android:textSize="@dimen/marginMediumView"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"
        android:text="닉네임"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/circleImageView"
        app:layout_constraintBottom_toTopOf="@+id/textPreMSG"/>
    <TextView
        android:id="@+id/textPreMSG"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="@dimen/marginSmallView"
        android:layout_marginTop="@dimen/marginSmallView"
        android:textSize="15dp"
        android:fontFamily="@font/light"
        android:textColor="@color/black"
        android:text="메시지 미리보기 박스"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/textNickName" />
</androidx.constraintlayout.widget.ConstraintLayout>